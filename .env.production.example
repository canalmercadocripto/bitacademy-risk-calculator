# Configuração de Produção - BitAcademy Calculator
# ==============================================

# Ambiente
NODE_ENV=production

# Servidor
PORT=3001

# Domínio
DOMAIN=calculadora.bitacademy.vip

# Segurança
JWT_SECRET=BitAcademy2025!SecureCalculatorJWT!RandomString
SESSION_SECRET=BitAcademy2025!SessionSecret!RandomString

# CORS - Origens permitidas
CORS_ORIGIN=https://calculadora.bitacademy.vip,https://www.calculadora.bitacademy.vip

# Banco de dados (SQLite em produção)
DB_TYPE=sqlite
DB_PATH=./bitacademy.db

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logs
LOG_LEVEL=info
LOG_FILE=/var/log/bitacademy-calculator.log

# Backup
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30

# Monitoramento
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Email (para notificações - opcional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=admin@bitacademy.vip
# SMTP_PASS=app_password_here
# ADMIN_EMAIL=admin@bitacademy.vip